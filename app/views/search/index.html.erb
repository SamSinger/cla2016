<h1>Search results</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Office address</th>
      <th>Phone</th>
      <th>Rank description</th>
      <th>Interest areas</th>
      <th>Department</th>
      <th>Category</th>
      <th>Au user name</th>
      <th>Password digest</th>
      <th>Role</th>
      <th>Monday hours</th>
      <th>Tuesday hours</th>
      <th>Wednesday hours</th>
      <th>Thursday hours</th>
      <th>Friday hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.middle_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= person.office_address %></td>
        <td><%= person.phone %></td>
        <td><%= person.rank_description %></td>
        <td><%= person.interest_areas %></td>
        <td><%= person.department_id %></td>
        <td><%= person.category_id %></td>
        <td><%= person.au_user_name %></td>
        <td><%= person.password_digest %></td>
        <td><%= person.role %></td>
        <td><%= person.monday_hours %></td>
        <td><%= person.tuesday_hours %></td>
        <td><%= person.wednesday_hours %></td>
        <td><%= person.thursday_hours %></td>
        <td><%= person.friday_hours %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


